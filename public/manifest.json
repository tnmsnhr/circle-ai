{
  "manifest_version": 3,
  "name": "Draw on Any Page (React)",
  "version": "1.0.0",
  "description": "Hold Cmd (Meta) to freehand draw on any webpage. Strokes scroll with the page.",
  "permissions": ["tabs", "activeTab", "scripting", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Draw on Any Page",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": { "service_worker": "background.js" },
   "web_accessible_resources": [
    {
      "resources": ["offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ]

}
